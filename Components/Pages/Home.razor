@page "/"
@inject AppDbContext AppDbContext

<PageTitle>Home — TSP Testbed</PageTitle>

<RadzenText TextStyle="TextStyle.H3">
    Welcome to TSP testbed!
</RadzenText>

<RadzenText TextStyle="TextStyle.H5">
    There are
    <span class="rz-color-success">@testCount</span>
    tests which were run
    <span class="rz-color-danger">@testRunCount</span>
    times in total.
</RadzenText>

@code
{
    int testCount, testRunCount;

    override protected void OnInitialized()
    {
        testCount = AppDbContext.Tests.Count();
        testRunCount = AppDbContext.TestRuns.Count();
    }
}